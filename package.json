{
  "name": "@xlts.dev/verdaccio-prometheus-middleware",
  "version": "2.0.0",
  "description": "Verdaccio middleware plugin used to collect prometheus compatible metrics",
  "keywords": [
    "verdaccio",
    "plugin",
    "middleware",
    "metrics",
    "prometheus"
  ],
  "author": {
    "name": "Ed Clement",
    "email": "ed@xlts.dev"
  },
  "license": "MIT",
  "homepage": "https://xlts.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/xlts-dev/verdaccio-prometheus-middleware"
  },
  "bugs": {
    "url": "https://github.com/xlts-dev/verdaccio-prometheus-middleware/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "test": "npm run lint && npm run unitTest",
    "unitTest": "jest",
    "lint": "eslint '**/*.{js,ts}'",
    "prettier": "prettier --write '**/*.{js,ts,json,md}'",
    "changelog": "conventional-changelog ---preset angular ---infile CHANGELOG.md --same-file",
    "release": "HUSKY=0 standard-version --no-verify",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "prom-client": "14.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.16",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@verdaccio/types": "10.2.2",
    "chance": "1.1.8",
    "commitizen": "^3.0.0",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "express": "4.17.2",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-junit": "13.0.0",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
