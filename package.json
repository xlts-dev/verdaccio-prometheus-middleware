{
  "name": "@xlts.dev/verdaccio-prometheus-middleware",
  "version": "1.0.0",
  "description": "Verdaccio middleware plugin used to collect prometheus compatible metrics",
  "keywords": [
    "verdaccio",
    "plugin",
    "middleware",
    "metrics",
    "prometheus"
  ],
  "author": {
    "name": "Ed Clement",
    "email": "ed@xlts.dev"
  },
  "license": "MIT",
  "homepage": "https://xlts.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/xlts-dev/verdaccio-prometheus-middleware"
  },
  "bugs": {
    "url": "https://github.com/xlts-dev/verdaccio-prometheus-middleware/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "test": "npm run lint && npm run unitTest",
    "unitTest": "jest",
    "lint": "eslint \"**/*.{js,ts}\"",
    "changelog": "conventional-changelog ---preset angular ---infile CHANGELOG.md --same-file",
    "release": "HUSKY=0 standard-version --no-verify"
  },
  "dependencies": {
    "prom-client": "14.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.4",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@verdaccio/eslint-config": "10.0.0",
    "@verdaccio/types": "10.1.0",
    "chance": "1.1.8",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.5.0",
    "eslint-plugin-import": "2.25.3",
    "express": "4.17.2",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "jest-junit": "13.0.0",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
